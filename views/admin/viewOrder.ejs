                    <div class="col-lg-10 col-xl-10">

                        <div class="card">
                            <div class="container py-5 h-100">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="order_details_iner">
                                        <h3>Order Details</h3>
                                        <table class="table table-borderless">
                                            <thead>
                                                <tr>
                                                    <th scope="col" colspan="2">Product</th>
                                                    <th scope="col">Image</th>
                                                    <th scope="col">Quantity</th>
                                                    <th scope="col">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(let key of order.products.item){%>
                                                    <tr>
                                                        <td colspan="2">
                                                            <span>
                                                                <%= key.productName%>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <div class="col-md-2">
                                                                <img src="/admin/multer/img/<%= key.productId.image[0] %>"
                                                                    class="img-fluid" alt="lol">
                                                            </div>
                                                        </td>

                                                        <td>
                                                            <%= key.qty%>
                                                        </td>
                                                        <td> <span>₹<%= key.price%></span></td>
                                                    </tr>
                                                    <%}%>
                                                        <tr>

                                                        <tr>
                                                            <th colspan="4">Subtotal</th>
                                                            <th> <span>₹<%= order.products.totalprice%></span></th>
                                                        </tr>

                                                        <!-- <tr>
                      <th colspan="3">shipping</th>
                      <th><span>flat rate: $50.00</span></th>
                    </tr> --
                                            </tbody>
                                            <hr>
                                            <tfoot>
                                                <tr>
                                                    <th scope="col" colspan="3">Quantity</th> -->
                                                        <th colspan="2"><div>Total:<%= order.products.totalprice%></div>
                                                        </th>
                                                        </tr>
                                                        </tfoot>
                                        </table>
<hr>
                                    </div>
                                </div>
                          
                      
                        <div class="container py-5 h-50">
                            <div class="row">
                                <div class="col-lg-12 col-lx-4 ">
                                    <div class="single_confirmation_details">
                                        <h4>order info</h4>
                                        <ul>
                                            <li>
                                                <p>order Id: <%= order._id%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>data: <%= order.createdAt.toDateString()%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>total: USD <%= order.products.totalprice%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>mayment methord: <%= order.payment%>
                                                </p>
                                            </li>
                                        </ul>
                                        <hr>
                                    </div>
                                </div>
                               
                                <div class="container py-5 h-100">
                                <div class="col-lg-12 col-lx-4 m-b-50">
                                    <div class="single_confirmation_details">
                                        <h4>Billing Address</h4>
                                        <ul>
                                            <li>
                                                <p>Name: <%= order.firstname%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>Address: <%= order.address%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>phone: <%= order.phone%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>city: <%= order.city%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>State: <%= order.state%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>country:<%= order.country%>
                                                </p>
                                            </li>
                                            <li>
                                                <p>postcode: <%= order.zip%>
                                                </p>
                                            </li>
                                        </ul>
                                        <hr>
                                    </div>
