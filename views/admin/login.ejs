              <form action="" method="post"  onsubmit="return allChecking()">
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control form-control-lg" placeholder="Email"onchange="emailValidate()"
                    />
                    <span id="Email"></span>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input
                    type="password"
                    id="password"
                    class="form-control form-control-lg"
                    name="password" placeholder="Password"
                    onchange="passwordValidate()"
                    />
                    <span id="Password"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Login" onclick="emailValidate(),passwordValidate()" />
                <!-- <a href="/admin/back">back</a> -->
              </form>
            </div>
          </div>
