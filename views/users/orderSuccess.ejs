     <!--================ confirmation part start =================-->
  <section class="confirmation_part padding_top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="confirmation_tittle">
            <h2>Thank you.<br> Your order has been received.</h2>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4 m-b-22">
          <div class="single_confirmation_details">
            <h4>order info</h4>
            <ul>
              <li>
                <p>order Id</p><span>: <%= order._id%></span>
              </li>
              <li>
                <p>data</p><span>: <%= order.createdAt.toDateString()%></span>
              </li>
              <li>
                <p>total</p><span>: USD <%= order.products.totalprice%></span>
              </li>
              <li>
                <p>mayment methord</p><span>: <%= order.payment%></span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4 m-b-22">
          <div class="single_confirmation_details">
            <h4>Billing Address</h4>
            <ul>
              <li>
                <p>Address</p><span>: <%= address.address%></span>
              </li>
              <li>
                <p>city</p><span>: <%= address.city%></span>
              </li>
              <li>
                <p>country</p><span>:<%= address.country%></span>
              </li>
              <li>
                <p>postcode</p><span>: <%= address.zip%></span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4 m-b-22">
          <div class="single_confirmation_details">
            <h4>shipping Address</h4>
            <ul>
              <li>
                <p>Address</p><span>: <%= address.address%></span>
              </li>
              <li>
                <p>city</p><span>: <%= address.city%></span>
              </li>
              <li>
                <p>country</p><span>: <%= address.country%></span>
              </li>
              <li>
                <p>postcode</p><span>: <%= address.zip%></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-lg-12 m-b-50">
          <div class="order_details_iner">
            <h3>Order Details</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col" colspan="2">Product</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
                <% for(let key of order.products.item){%>
                <tr>
                  <th colspan="2"><span><%= key.productName%></span></th>
                  <th><%= key.qty%></th>
                  <th> <span>₹<%= key.price%></span></th>
                </tr>
                <%}%>
                <tr>
                 
                <tr>
                  <th colspan="3">Subtotal</th>
                  <th> <span>₹<%= order.products.totalprice%></span></th>
                </tr>
                <!-- <tr>
                  <th colspan="3">shipping</th>
                  <th><span>flat rate: $50.00</span></th>
                </tr> -->
              </tbody>
              <tfoot>
                <tr>
                  <!-- <th scope="col" colspan="3">Quantity</th> -->
                  <th scope="col">Total:Rs <%= order.products.totalprice%></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
        <a href="/" class="nk-btn nk-btn-rounded nk-btn-color-white"
                >Return to Homepage</a
              >
      </div>
    </div>
  </section>
  <!--================ confirmation part end =================-->

